<div class="container py-5">

  <div class="text-center mb-4">
    <h1 class="fw-bold">Your Recipes</h1>
    <p class="text-muted">Manage all your saved and generated recipes.</p>
  </div>

  <div class="d-flex justify-content-center gap-3 mb-5">
    <%= link_to "â• New Recipe", assistant_path, class: "btn btn-primary px-4 py-2 rounded-pill" %>
  </div>

  <% if @recipes.any? %>
    <div class="row g-4">
      <% @recipes.each do |recipe| %>
        <div class="col-md-4">
          <div class="card shadow-sm border-0 rounded-4 h-100">
            <div class="card-body d-flex flex-column">

              <!-- TITLE -->
              <h5 class="fw-bold"><%= recipe.title %></h5>

              <!-- NUTRITION SUMMARY -->
              <p class="text-muted small mb-3">
                Energy: <%= recipe.calories || 0 %> kcal |
                Protein: <%= recipe.proteins || 0 %>g |
                Fiber: <%= recipe.fiber || 0 %>g |
                Carbs: <%= recipe.carbs || 0 %>g |
                Fats: <%= recipe.fats || 0 %>g
              </p>

              <!-- TIMES -->
              <p class="small text-secondary mt-2 mb-1">
                â± Prep: <%= recipe.prep_time %> min
              </p>
              <p class="small text-secondary mb-3">
                ğŸ”¥ Cook: <%= recipe.cook_time %> min
              </p>

              <!-- BUTTONS -->
              <div class="mt-auto d-flex justify-content-between align-items-center gap-2">
                <!-- CHANGED CLASS: Now using btn-primary to match "New Recipe" -->
                <%= link_to "View",
                            recipe_path(recipe),
                            class: "btn btn-primary rounded-pill btn-sm" %>

                <%= button_to "Delete",
                              recipe_path(recipe),
                              method: :delete,
                              data: { confirm: "Remove this recipe from your cookbook?" },
                              class: "btn btn-outline-danger rounded-pill btn-sm" %>
              </div>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted text-center">
      No recipes yet. Once you generate and save a recipe, it will appear here.
    </p>
  <% end %>

</div>
